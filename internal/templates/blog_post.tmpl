{{define "blogPost"}}
{{if .BlogPost}}
<article class="max-w-4xl mx-auto">
    <header class="mb-8">
        <h1 class="text-3xl font-bold mb-4">{{.BlogPost.Title}}</h1>
        <div class="text-sm text-gray-600 mb-4">
            <span>{{.BlogPost.Author}}</span> • 
            <span>{{formatDate .BlogPost.CreatedDate}}</span> • 
            <span>{{.BlogPost.ReadTime}}</span>
        </div>
    </header>

    <div class="prose max-w-none">
        {{range .BlogPost.Content}}
            {{if eq .Type "paragraph"}}
                <p>{{.Text}}</p>
            {{else if eq .Type "image"}}
                <figure class="my-8">
                    <img src="{{.URL}}" alt="{{.Label}}" class="rounded-lg shadow-md">
                    {{if .Label}}
                        <figcaption class="text-sm text-gray-600 mt-2 text-center">{{.Label}}</figcaption>
                    {{end}}
                </figure>
            {{end}}
        {{end}}
    </div>
</article>
{{end}}
{{end}} 